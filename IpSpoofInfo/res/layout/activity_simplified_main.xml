<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"    
    tools:context=".SimplifiedMainActivity" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="17dp"
        android:orientation="vertical" >

        <CheckBox
            android:id="@+id/checkBoxCase1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Case 1: Sample/16" />

        <CheckBox
            android:id="@+id/checkBoxCase2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Case 2: Sample/32" />

        <CheckBox
            android:id="@+id/checkBoxCase3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Case 3: All/16" />

        <CheckBox
            android:id="@+id/checkBoxCase4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Case 4: All/16-32" />

        <CheckBox
            android:id="@+id/checkBoxCase1P"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Case 1 + DL Pkt Probing" />

        <CheckBox
            android:id="@+id/checkBoxCase2P"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Case 2 + DL Pkt Probing" />
        
        <CheckBox
            android:id="@+id/checkBoxCase3P"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Case 3 + DL Pkt Probing" />
        
        <CheckBox
            android:id="@+id/checkBoxCase4P"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Case 4 + DL Pkt Probing" />
        
        <LinearLayout
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <Button
                android:id="@+id/buttonCaseMin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:onClick="onClickButtonCaseMin"
                android:text="Minimal" />
            
            <Button
                android:id="@+id/buttonCaseMax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:onClick="onClickButtonCaseMax"
                android:text="Maximal" />
            
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <Button
                android:id="@+id/buttonRun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:onClick="onClickButtonRun"
                android:text="Run" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="center_vertical|center_horizontal|left"
                android:onClick="onClickButtonDetailedSettings"
                android:text="Detailed Setttings" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
